<!DOCTYPE html>
<html lang="en">

<%- include('../partials/_admin_css') %>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

<body class="g-sidenav-show bg-gray-100">
  <%- include('../partials/_aside') %>
  <div class="main-content position-relative bg-gray-100 max-height-vh-100 h-100">
    <div class="container-fluid">
      <div class="page-header min-height-300 border-radius-xl mt-4" style="background-color:grey  ; background-position-y: 50%;">
        <span class="mask bg-gradient-primary opacity-6">
            <select  id="addProperty" class="form-control">
                <option value="">--select to add--</option>
                <option value="property">Add Property</option>
              </select>
        </span>
    <div class="container-fluid py-4 d-none property">
      <div class="row">
        <div class="col-12 mt-4">
          <div class="card mb-4">
            <div class="card-body p-3">
                <div class="row">
                   <div class="col-md-12">
                    <h6>Post your leads</h6>
                        <form method="POST" action="/addroperty" enctype="multipart/form-data">
                           <div class="row">
                                <div class="form-group col-md-12">
                                    <label for="title">Title</label>
                                    <input type="text" class="form-control" name="title" id="title" placeholder="E.g Newly Build Four Bedroom Duplex in a Serene Neighbourhood" required>
                                </div>
                                <div class="form-group col-md-4">
                                  <label for="purPose">Purpose</label>
                                    <select  name="purpose" id="purpose" class="selectOption"  required>
                                      <option value="">--select--</option>
                                      <option value="Rent">For Rent</option>
                                      <option value="Sale">For Sale</option>
                                      <option value="Short">Short Let</option>
                                  </select>
                                </div>
                                  <div class="form-group col-md-4">
                                    <label for="propertty_type">Types of Property</label>
                                    <select  name="propertyType" id="propertyType" class="selectOption"  required>
                                        <option value="">--select--</option>
                                        <option value="coWorkingSpace">Co working-space</option>
                                        <option value="commercialProperty">Commercial Property</option>
                                        <option value="FlatApartment">Flat/Apartment</option>
                                        <option value="House">House</option>
                                        <option value="Land">Land</option>
                                      </select>
                                  </div>
                                <div class="form-group col-md-4">
                                    <label for="sub_type">Sub type of property</label>
                                    <select  name="subType" id="subType"  class="selectOption">
                                      <option id="select" value="">Choose Sub Type of property</option>
                                    </select>
                                    <!-- <input type="text" class="form-control" id="land-size-description" name="land_size_description" style="display: none; margin-top: 10px;" placeholder="eg number of hectares/plot/square meter" required> -->
                                </div>
                                <div class="form-group col-md-3">
                                  <label for="numberof_bedrooms">Bedrooms</label>
                                   <select  name="numberOfBedrooms" id="numberOfBedrooms"  class="selectOption" required>
                                      <option value="" id="">--select--</option>
                                      <option value="1" id="1">1</option>
                                      <option value="2" id="2">2</option>
                                      <option value="3" id="3">3</option>
                                      <option value="4" id="4">4</option>
                                      <option value="5" id="5">5</option>
                                      <option value="6" id="6">6</option>
                                      <option value="7" id="7">7</option>
                                      <option value="8" id="8">8</option>
                                      <option value="9" id="9">9</option>
                                      <option value="10" id="10">10+</option>
                                    </select>
                              </div>

                              <div class="form-group col-md-3">
                                <label for="number_of_bathrooms">Bathrooms</label>
                                <select  name="numberOfBathrooms" id="numberOfBathrooms"  class="selectOption" required>
                                  <option value="" id="">--select--</option>
                                  <option value="1" id="1">1</option>
                                  <option value="2" id="2">2</option>
                                  <option value="3" id="3">3</option>
                                  <option value="4" id="4">4</option>
                                  <option value="5" id="5">5</option>
                                  <option value="6" id="6">6</option>
                                  <option value="7" id="7">7</option>
                                  <option value="8" id="8">8</option>
                                  <option value="9" id="9">9</option>
                                  <option value="10" id="10">10+</option>
                                </select>
                            </div>

                              <div class="form-group col-md-3">
                                <label for="number_of_toilets">Toilets</label>
                                <select  name="numberOfToilets" id="numberOfToilets"  class="selectOption" required>
                                  <option value="" id="">--select--</option>
                                  <option value="1" id="1">1</option>
                                  <option value="2" id="2">2</option>
                                  <option value="3" id="3">3</option>
                                  <option value="4" id="4">4</option>
                                  <option value="5" id="5">5</option>
                                  <option value="6" id="6">6</option>
                                  <option value="7" id="7">7</option>
                                  <option value="8" id="8">8</option>
                                  <option value="9" id="9">9</option>
                                  <option value="10" id="10">10+</option>
                                </select>
                                <!-- <input type="text" class="form-control" id="land-size-description" name="land_size_description" style="display: none; margin-top: 10px;" placeholder="eg number of hectares/plot/square meter" required> -->
                              </div>
                                <div class="form-group col-md-3">
                                  <label for="size">Size</label>
                                  <input type="text" class="form-control" name="sqm" id="size" placeholder="e.g. 1"> <span>Sqm</span>
                                </div>

                                 <div class="bootstrap-demo">
                                      <label class="checkbox-inline checkboxtext" style="font-size: 15px;"> <!-- class checkbox-inline to display checkbox inline -->
                                        <!-- input type checkbox -->
                                        <input type="checkbox" name="furnished" id="furnished" value="Furnished"> Furnished</label>
                                      
                                      <label class="checkbox-inline" style="font-size: 15px;" >
                                        <input type="checkbox" name="serviced" id="serviced" value="Serviced"> Serviced </label>
                                      
                                      <label class="checkbox-inline" style="font-size: 15px;">
                                        <input type="checkbox" name="newlybuilt" id="newlybuilt" value="Newly Build">Newly Built</label>
                                 </div>
            
                                 <div class="form-group col-md-4">
                                    <label for="state">State</label>
                                    <select name="stateName" id="selectState" class="selectOption" required>
                                      <option value="" selected="selected">Choose State</option>
                                      <option value="Abuja FCT">Abuja FCT</option>
                                      <option value="Abia">Abia</option>
                                      <option value="Adamawa">Adamawa</option>
                                      <option value="Akwa Ibom">Akwa Ibom</option>
                                      <option value="Anambra">Anambra</option>
                                      <option value="Bauchi">Bauchi</option>
                                      <option value="Bayelsa">Bayelsa</option>
                                      <option value="Benue">Benue</option>
                                      <option value="Borno">Borno</option>
                                      <option value="Cross River">Cross River</option>
                                      <option value="Delta">Delta</option>
                                      <option value="Ebonyi">Ebonyi</option>
                                      <option value="Edo">Edo</option>
                                      <option value="Ekiti">Ekiti</option>
                                      <option value="Enugu">Enugu</option>
                                      <option value="Gombe">Gombe</option>
                                      <option value="Imo">Imo</option>
                                      <option value="Jigawa">Jigawa</option>
                                      <option value="Kaduna">Kaduna</option>
                                      <option value="Kano">Kano</option>
                                      <option value="Katsina">Katsina</option>
                                      <option value="Kebbi">Kebbi</option>
                                      <option value="Kogi">Kogi</option>
                                      <option value="Kwara">Kwara</option>
                                      <option value="Lagos">Lagos</option>
                                      <option value="Nassarawa">Nassarawa</option>
                                      <option value="Niger">Niger</option>
                                      <option value="Ogun">Ogun</option>
                                      <option value="Ondo">Ondo</option>
                                      <option value="Osun">Osun</option>
                                      <option value="Oyo">Oyo</option>
                                      <option value="Plateau">Plateau</option>
                                      <option value="Rivers">Rivers</option>
                                      <option value="Sokoto">Sokoto</option>
                                      <option value="Taraba">Taraba</option>
                                      <option value="Yobe">Yobe</option>
                                      <option value="Zamfara">Zamfara</option>
                                      <option value="Outside Nigeria">Outside Nigeria</option>
                                    </select>
                                  </div>
                                  <div class="form-group col-md-4">
                                    <label for="selectLocal">Locality</label>                               
                                     <select  name="LocalityName" id="selectLocal"  class="selectOption">
                                      <option value="">--Select--</option>
                                    </select>
                                  </div>
                                 <div class="form-group col-md-4">
                                    <label for="selectAreaName">Area</label>                               
                                    <select id="selectAreaName"  name="areaName"  class="selectOption">
                                      <option value="">--Select--</option>
                                   </select>
                                  </div>
                                  <div class="form-group col-md-12">
                                    <label for="localityName">Street | Estate | Neighbourhood</label>
                                    <input type="text" class="form-control" name="areaType" id="localityName" placeholder="">
                                  </div>
                                  <div class="form-group col-md-4">
                                    <label for="property_price">Price</label>
                                    <input type="text" class="form-control" id="" name="PropertyPrice" placeholder="e.g. 5000000 (without comma)" required>
                                  </div>
                                <div class="form-group col-md-4">
                                  <label for="">Denomination</label>
                                  <select  name="denomination" id=""  class="selectOption" required>
                                    <option value="" id="">--select--</option>
                                    <option value="NAIRA" id="1">Naira</option>
                                    <option value="Dollars" id="2">Dollars</option>
                                  </select>
                                </div>
                                 <div class="form-group col-md-4">
                                  <label for="append_to">Append to</label>
                                  <select  name="appendTo" id="append_to"  class="selectOption" required>
                                    <option value="" id="">--select--</option>
                                    <option value="day" id="1">/day</option>
                                    <option value="month" id="2">/month</option>
                                    <option value="year" id="3">/year</option>
                                    <option value="sqm" id="3">/Sqm</option>
                                  </select>
                                 </div>

                                  <label class="checkbox-inline" style="font-size: 15px;" >
                                   <input type="checkbox" name="installment" value="true" id="installment"> Installment Payment </label>

                                   <div class="form-group col-md-4 hideInstallment" style="display: none;">
                                    <label for="property_price">Initial payment</label>
                                    <input type="text" class="form-control" id="" name="Initial_amount" placeholder="e.g. 500,000">
                                  </div>
                                  <div class="form-group col-md-4 hideInstallment" style="display: none;">
                                    <label for="property_price">Monthly payment</label>
                                    <input type="text" class="form-control" id="" name="monthly_payment" placeholder="e.g. 500,000">
                                  </div>
                                  <div class="form-group col-md-4 hideInstallment" style="display: none;">
                                    <label for="property_price">Add duration (Months)</label>
                                    <input type="text" class="form-control" id="" name="period_of_payment" placeholder="e.g. 9 Months">
                                  </div>

                                  <div class="form-group col-md-12">
                                    <label for="description">Description</label>
                                    <textarea  class="form-control" rows="5" id="description" name="description" placeholder="Describe your property"></textarea>
                                </div>
                                <div class="form-group col-md-12">
                                  <label for="description">Youtube Video Link</label>
                                  <input type="text" class="form-control" id="youtube_video_link" name="youtube_video_link" placeholder="">
                                </div>
                                <div class="form-group col-md-12">
                                  <label for="description">Instagram Video Link</label>
                                  <input type="text" class="form-control" id="instagram_video_link" name="instagram_video_link" placeholder="">
                                </div>                         
                                <div class="form-group col-md-6"  align="left">
                                  <span >You can now upload multiple image once</span>
                                  <div class="field">
                                    <img width="30%" src="https://i.pinimg.com/originals/04/54/7c/04547c2b354abb70a85ed8a2d1b33e5f.png" id="upfile1" style="cursor:pointer" />
                                    <input type="file" id="files" title=" " class="form-control" name="uploadImages" accept="image/*" style="display:none" capture multiple />
                                  </div>
                                </div>
                                <div class="form-group col-md-4" style="margin-top: 50px; border-radius: 25px;">
                                  <div class="form-group">
                                   <input type="submit" class="btn btn-small btn-block btn-secondary" value="submit">
                                 </div>
                                </div>
                          </div>
                        </form>
                    </div>
                  </div>
                </div>    
           </div>
          </div>
        </div>
    </div>

