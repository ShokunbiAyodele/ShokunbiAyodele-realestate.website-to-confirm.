<section class="home-slider owl-carousel">
  <% for (var i = 0; i < allpost.length; i++) { %>
  <div class="slider-item" style="background-image:url(images/bg_1.jpg);">
    <div class="overlay"></div>
    <div class="container">
      <div class="row no-gutters slider-text align-items-md-end align-items-center justify-content-end">
      <div class="col-md-6 text p-4 ftco-animate">
        <h1 class="mb-3"><%-allpost[i].title%></h1>
        <span class="location d-block mb-3"><i class="icon-my_location"></i><%-allpost[i].subType%></span>
        <p><%-allpost[i].description%></p>
        <span class="price"><%-allpost[i].price%></span>
        <a href="#" class="btn-custom p-3 px-4 bg-primary"><%-allpost[i].purpose %> </a>
      </div>
    </div>
    </div>
  </div>
  <% } %>
</section>

<section class="ftco-section ftco-properties">
  <div class="container">
    <div class="row justify-content-center mb-5 pb-3">
      <div class="col-md-7 heading-section text-center ftco-animate">
        <!-- <span class="subheading">Recent Posts</span> -->
        <h2 class="mb-4">Landed Properties</h2>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <div class="properties-slider owl-carousel ftco-animate">
          <% for (var i = 0; i < landProp.length; i++) { %>
          <div class="item">
            <div class="properties">
              <a href="/getLandPostDetails?id=<%-landProp[i]._id%>" class="img d-flex justify-content-center align-items-center" style="background-image: url(<%-posts[i].image_url[0]%>);">
                <div class="icon d-flex justify-content-center align-items-center">
                  <span class="icon-search2"></span>
                </div>
              </a>
              <div class="text p-3">
                <span class="status sale"><%-landProp[i].purpose%></span>
                <div class="d-flex">
                  <div class="one">
                    <h3><%-landProp[i].subType%></h3>
                    <p><%-landProp[i].title%></p>
                    <div class="two pl-0">
                      <span class="price"><%-landProp[i].price%></span>
                    </div>
                  </div>
                </div>
                <p><%-landProp[i].description%></p>
              </div>
            </div>
          </div>
          <% } %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<section class="ftco-section bg-light">
  <div class="container">
    <div class="row justify-content-center mb-5 pb-3">
      <div class="col-md-7 heading-section text-center ftco-animate">
        <!-- <span class="subheading">Special Offers</span> -->
        <h2 class="mb-4">Housing Properties</h2>
      </div>
    </div>    		
  </div>
  <div class="container-fluid">
    <div class="row">
      <% for (var i = 0; i < posts.length; i++) { %>
      <div class="col-sm col-md-6 col-lg ftco-animate">
        <div class="properties">
          <a href="/getPostDetails?id=<%-posts[i]._id%>" class="img img-2 d-flex justify-content-center align-items-center" style="background-image: url(<%-posts[i].image_url[0]%>);">
            <div class="icon d-flex justify-content-center align-items-center">
              <span class="icon-search2"></span>
            </div>
          </a>
          <div class="text p-3">
            <span class="status sale"><%-posts[i].purpose%></span>
            <div class="d-flex">
              <div class="one">
                <h3><%-posts[i].subType%></h3>
                <p><%-posts[i].title%></p>
                <div class="two pl-0">
                <span class="price"><%-posts[i].price%></span>
                </div>

              </div>
              <!-- <div class="two">
                <span class="price">$20,000</span>
              </div> -->
            </div>
            <p><%-posts[i].description%></p>
            <p class="bottom-area d-flex">
              <span><i class="flaticon-selection"></i> 250sqft</span>
              <span class="ml-auto"><i class="flaticon-bathtub"></i> 3</span>
              <span><i class="flaticon-bed"></i> 4</span>
            </p>
          </div>
        </div>
      </div>
      <% } %>
    </div>
  </div>
</section>
<%- include('./partials/pageform') %>