<!DOCTYPE html>
<html class="wide wow-animation" lang="en">
    <%- include('./partials/_header') %>
  <body>
       <%- include('./partials/_nav') %>
       <div class="container col-md-12 bg-dark">
        <div class="" id="exampleModalCenter" tabindex="" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="exampleModalCenterTitle"><%= title %>  to your Account</h5>
                </div>
                <% if (locals.messages.errors) { %>
                    <% messages.errors.forEach( el => {%>
                        <div class="alert alert-danger"><%= el.msg %></div>
                    <% }) %>    
                <% } %>
                <div class="modal-body vh-50">
                  <form method="POST" action="/login">
                    <div class="form-group">
                      <label for="email">Email address</label>
                      <input type="email" class="form-control" name="email" id="email" aria-describedby="emailHelp" placeholder="Enter email">
                      <!-- <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small> -->
                    </div>
                    <div class="form-group">
                      <label for="exampleInputPassword1">Password</label>
                      <input type="password" class="form-control" name="password" id="password" placeholder="Password">
                    </div>
                    <input type="submit" class="btn btn-primary" value="Login">
                  </form>
                
                    <span>Don't have an account ? <a href="/register">Sign up</a></span>
             
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    <%- include('./partials/_footer') %>
</body>
</html>